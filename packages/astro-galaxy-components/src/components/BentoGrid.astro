---
interface Props {
  title: string;
  id?: string;
}

const { title, id = title.toLowerCase().replace(/\s+/g, '-') } = Astro.props;
---

<div class="h2-wrap">
  <h2 id={id}><a class="h-anchor" href={`#${id}`}>#</a>{title}</h2>
  <div class="h3-wrap-list">
    <slot />
  </div>
</div>

<style>
  .h2-wrap {
    margin-bottom: 2rem;
  }
  
  .h3-wrap-list {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 1rem;
  }

  /* Support responsive layout */
  @media (max-width: 640px) {
    .h3-wrap-list {
      grid-template-columns: 1fr;
    }
  }
</style> 