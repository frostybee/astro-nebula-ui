---
import CopyButton from './CopyButton.astro';

interface Props {
  lang?: string;
  code: string;
}

const { lang = 'text', code } = Astro.props;
---

<pre class="code-block">
  <CopyButton />
  <code class={`language-${lang}`} set:html={code}></code>
</pre>

<style>
  .code-block {
    position: relative;
    border-radius: 0.375rem;
    overflow: auto;
    max-width: 100%;
  }
  
  .code-block code {
    display: block;
    padding: 1rem;
    font-family: var(--sl-font-mono);
    font-size: 0.9rem;
    line-height: 1.5;
    overflow-x: auto;
  }
</style> 