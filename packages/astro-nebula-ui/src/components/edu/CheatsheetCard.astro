---
// A component for rendering code cheatsheets with title, background color, border, and hyperlinks

interface Props {
  title: string;
  variant?: "default" | "accent" | "minimal" | "gradient";
  icon?: string;
  links?: {
    text: string;
    url: string;
    type?: "documentation" | "tutorial" | "tool" | "reference";
  }[];
}

const {
  title,
  variant = "default",
  icon,
  links = []
} = Astro.props;
---

<div class={`cheatsheet-card cheatsheet-card--${variant}`}>
  <div class="cheatsheet-header">
    <div class="cheatsheet-title-wrapper">
      {icon && <span class="cheatsheet-icon" aria-hidden="true">{icon}</span>}
      <h3 class="cheatsheet-title">{title}</h3>
    </div>
    <div class="cheatsheet-header-decoration"></div>
  </div>
  <div class="cheatsheet-content">
    <slot />
  </div>
  {links.length > 0 && (
    <div class="cheatsheet-links">
      <div class="cheatsheet-links-header">
        <svg class="cheatsheet-links-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
          <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
        </svg>
        <h4>Resources</h4>
      </div>
      <div class="cheatsheet-links-list">
        {links.map((link) => (
          <a href={link.url} target="_blank" rel="noopener noreferrer" class={`cheatsheet-link ${link.type ? `cheatsheet-link--${link.type}` : ''}`}>
            <svg class="cheatsheet-link-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15,3 21,3 21,9"></polyline>
              <line x1="10" y1="14" x2="21" y2="3"></line>
            </svg>
            <span>{link.text}</span>
          </a>
        ))}
      </div>
    </div>
  )}
</div>

<style>
  .cheatsheet-card {
    background: var(--sl-color-bg-nav);
    border-radius: 6px;
    border: 1px solid var(--sl-color-gray-5);
    margin-bottom: 0.75rem;
    overflow: hidden;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.06);
    transition: all 0.2s ease;
    position: relative;
  }

  .cheatsheet-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--sl-color-accent), var(--sl-color-accent-high));
  }

  .cheatsheet-card:hover {
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    border-color: var(--sl-color-gray-4);
  }

  /* Variant Styles */
  .cheatsheet-card--accent {
    border-color: var(--sl-color-accent);
    background: linear-gradient(135deg, var(--sl-color-bg-nav) 0%, color-mix(in srgb, var(--sl-color-accent) 5%, var(--sl-color-bg-nav)) 100%);
  }

  .cheatsheet-card--minimal {
    background: transparent;
    border: 1px solid var(--sl-color-gray-4);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  .cheatsheet-card--minimal::before {
    display: none;
  }

  .cheatsheet-card--gradient {
    background: linear-gradient(135deg, var(--sl-color-bg-nav) 0%, var(--sl-color-bg-sidebar) 100%);
    border-color: var(--sl-color-accent);
  }

  .cheatsheet-header {
    padding: 0.5rem 0.75rem 0.375rem 0.75rem;
    border-bottom: 1px solid var(--sl-color-gray-5);
    background: var(--sl-color-bg-sidebar);
    position: relative;
  }

  .cheatsheet-title-wrapper {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  .cheatsheet-icon {
    font-size: 0.875rem;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.25rem;
    height: 1.25rem;
    background: var(--sl-color-accent);
    border-radius: 4px;
    color: var(--sl-color-white);
    flex-shrink: 0;
  }

  .cheatsheet-title {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--sl-color-white);
    line-height: 1.2;
  }

  .cheatsheet-header-decoration {
    position: absolute;
    bottom: -1px;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, var(--sl-color-accent), transparent);
    opacity: 0.6;
  }

  .cheatsheet-content {
    padding: 0.75rem;
  }

  .cheatsheet-content :global(pre) {
    border-radius: 4px;
    margin: 0.375rem 0;
    border: 1px solid var(--sl-color-gray-5);
    box-shadow: none;
    font-size: 0.8rem;
  }

  .cheatsheet-content :global(pre:first-child) {
    margin-top: 0;
  }

  .cheatsheet-content :global(pre:last-child) {
    margin-bottom: 0;
  }

  .cheatsheet-content :global(p) {
    margin: 0.25rem 0;
    color: var(--sl-color-gray-1);
    line-height: 1.4;
    font-size: 0.875rem;
  }

  .cheatsheet-content :global(p:first-child) {
    margin-top: 0;
  }

  .cheatsheet-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .cheatsheet-content :global(h4),
  .cheatsheet-content :global(h5) {
    margin: 0.5rem 0 0.25rem 0;
    color: var(--sl-color-white);
    font-weight: 600;
    font-size: 0.875rem;
  }

  .cheatsheet-content :global(h4:first-child),
  .cheatsheet-content :global(h5:first-child) {
    margin-top: 0;
  }

  .cheatsheet-content :global(code) {
    background: var(--sl-color-gray-6);
    color: var(--sl-color-accent-high);
    padding: 0.125rem 0.25rem;
    border-radius: 3px;
    font-family: var(--sl-font-mono);
    font-size: 0.8em;
  }

  .cheatsheet-links {
    padding: 0.5rem 0.75rem 0.625rem 0.75rem;
    border-top: 1px solid var(--sl-color-gray-5);
    background: var(--sl-color-bg-sidebar);
  }

  .cheatsheet-links-header {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    margin-bottom: 0.375rem;
  }

  .cheatsheet-links-icon {
    color: var(--sl-color-accent);
    flex-shrink: 0;
    width: 12px;
    height: 12px;
  }

  .cheatsheet-links h4 {
    margin: 0;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--sl-color-white);
  }

  .cheatsheet-links-list {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .cheatsheet-link {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.375rem;
    background: var(--sl-color-gray-6);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 3px;
    text-decoration: none;
    color: var(--sl-color-white);
    font-size: 0.75rem;
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
  }

  .cheatsheet-link::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 0;
    background: var(--sl-color-accent);
    transition: width 0.2s ease;
  }

  .cheatsheet-link:hover {
    background: var(--sl-color-gray-5);
    border-color: var(--sl-color-accent);
    transform: translateX(2px);
  }

  .cheatsheet-link:hover::before {
    width: 2px;
  }

  .cheatsheet-link-icon {
    color: var(--sl-color-gray-2);
    flex-shrink: 0;
    transition: color 0.2s ease;
    width: 10px;
    height: 10px;
  }

  .cheatsheet-link:hover .cheatsheet-link-icon {
    color: var(--sl-color-accent);
  }

  .cheatsheet-link span {
    position: relative;
    z-index: 1;
  }

  /* Link type-specific styling */
  .cheatsheet-link--documentation {
    border-left: 2px solid var(--sl-color-blue);
  }

  .cheatsheet-link--tutorial {
    border-left: 2px solid var(--sl-color-green);
  }

  .cheatsheet-link--tool {
    border-left: 2px solid var(--sl-color-purple);
  }

  .cheatsheet-link--reference {
    border-left: 2px solid var(--sl-color-orange);
  }

  /* Print Styles */
  @media print {
    .cheatsheet-card {
      background: white !important;
      border: 2px solid #333 !important;
      box-shadow: none !important;
      transform: none !important;
      break-inside: avoid;
    }

    .cheatsheet-card::before {
      background: #333 !important;
    }

    .cheatsheet-header {
      background: #f8f9fa !important;
      border-bottom-color: #333 !important;
    }

    .cheatsheet-title {
      color: #000 !important;
    }

    .cheatsheet-content :global(p) {
      color: #333 !important;
    }

    .cheatsheet-content :global(h4),
    .cheatsheet-content :global(h5) {
      color: #000 !important;
    }

    .cheatsheet-links {
      background: #f8f9fa !important;
      border-top-color: #333 !important;
    }

    .cheatsheet-links h4 {
      color: #000 !important;
    }

    .cheatsheet-link {
      background: #f5f5f5 !important;
      border-color: #ccc !important;
      color: #000 !important;
      transform: none !important;
    }

    .cheatsheet-link::before {
      display: none !important;
    }

    /* Show URL for links */
    .cheatsheet-link::after {
      content: " (" attr(href) ")";
      font-size: 0.75rem;
      color: #666;
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .cheatsheet-card {
      margin-bottom: 0.625rem;
    }

    .cheatsheet-header {
      padding: 0.375rem 0.625rem 0.25rem 0.625rem;
    }

    .cheatsheet-content {
      padding: 0.625rem;
    }

    .cheatsheet-links {
      padding: 0.375rem 0.625rem 0.5rem 0.625rem;
    }

    .cheatsheet-title {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .cheatsheet-card {
      border-radius: 4px;
      margin: 0.5rem 0;
    }

    .cheatsheet-header {
      padding: 0.25rem 0.5rem 0.125rem 0.5rem;
    }

    .cheatsheet-content {
      padding: 0.5rem;
    }

    .cheatsheet-links {
      padding: 0.25rem 0.5rem 0.375rem 0.5rem;
    }

    .cheatsheet-title {
      font-size: 0.85rem;
    }

    .cheatsheet-icon {
      width: 1rem;
      height: 1rem;
      font-size: 0.75rem;
    }
  }

  /* High Contrast Mode Support */
  @media (prefers-contrast: high) {
    .cheatsheet-card {
      border-width: 3px;
    }

    .cheatsheet-link {
      border-width: 2px;
    }
  }

  /* Reduced Motion Support */
  @media (prefers-reduced-motion: reduce) {
    .cheatsheet-card,
    .cheatsheet-link,
    .cheatsheet-link::before,
    .cheatsheet-link-icon {
      transition: none;
    }

    .cheatsheet-card:hover,
    .cheatsheet-link:hover {
      transform: none;
    }
  }
</style>
