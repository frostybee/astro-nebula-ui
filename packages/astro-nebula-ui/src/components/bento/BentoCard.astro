---
interface Props {
  title: string;
  category?: "arrays" | "functions" | "classes" | "syntax" | "default";
  span?: {
    rows?: number;
    cols?: number;
  };
}

const {
  title,
  category = "default",
  span = { rows: 1, cols: 1 },
} = Astro.props;
---

<div
  class="bento-card"
  style={`
    grid-row: span ${span.rows};
    grid-column: span ${span.cols};
  `}
>
  <div class={`card-badge category-${category}`}>
    <p>{title}</p>
  </div>
  <div class="card-content">
    <slot />
  </div>
</div>

<style>
  @layer oi {
    .bento-card {
      background: var(--sl-color-gray-7);
      border: 1px solid var(--sl-color-gray-5);
      border-radius: 1rem;
      box-shadow:
        0 4px 6px -1px rgb(0 0 0 / 0.1),
        0 2px 4px -2px rgb(0 0 0 / 0.1);
      transition:
        transform 0.2s ease-in-out,
        box-shadow 0.2s ease-in-out;
      overflow: hidden;
      position: relative;
    }

    .bento-card:hover {
      box-shadow:
        0 10px 15px -3px rgb(0 0 0 / 0.1),
        0 4px 6px -4px rgb(0 0 0 / 0.1);
    }

    .card-content {
      padding: 2rem 0.5rem 1.5rem 0.5rem;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    .card-content > h2 {
      font-size: 1.25rem !important;
      background-color: var(--sl-color-accent);
    }

    .card-badge {
      position: absolute;
      top: 0;
      right: 0;
      background: var(--sl-color-accent);
      padding: 0.25rem 0.75rem;
      /* border-radius: 9999px; */
      font-size: 0.875rem;
      color: rgb(254, 254, 254);
      font-weight: 600;
    }

    .card-badge.category-arrays {
      background: var(--sl-color-blue);
    }

    .card-badge.category-functions {
      background: var(--sl-color-green);
    }

    .card-badge.category-classes {
      background: var(--sl-color-purple);
    }

    .card-badge.category-syntax {
      background: #cc6600;
    }

    .card-badge.category-default {
      background: var(--sl-color-accent);
    }
  }
</style>
