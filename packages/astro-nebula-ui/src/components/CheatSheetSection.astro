---
interface Props {
  title: string;
  icon?: string;
  collapsible?: boolean;
  defaultCollapsed?: boolean;
  id?: string;
}

const { 
  title, 
  icon,
  collapsible = false,
  defaultCollapsed = false,
  id = `cheatsheet-section-${Math.random().toString(36).substr(2, 9)}`
} = Astro.props;
---

<div class={`cheatsheet-section ${collapsible ? 'cheatsheet-section--collapsible' : ''} ${defaultCollapsed ? 'collapsed' : ''}`} id={id}>
  <div class="cheatsheet-section__header">
    {collapsible ? (
      <button 
        class="cheatsheet-section__toggle"
        aria-expanded={!defaultCollapsed}
        aria-controls={`${id}-content`}
      >
        <svg class="cheatsheet-section__toggle-icon" width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m4 6 4 4 4-4"></path>
        </svg>
        {icon && <span class="cheatsheet-section__icon" aria-hidden="true">{icon}</span>}
        <h3 class="cheatsheet-section__title">{title}</h3>
      </button>
    ) : (
      <div class="cheatsheet-section__header-content">
        {icon && <span class="cheatsheet-section__icon" aria-hidden="true">{icon}</span>}
        <h3 class="cheatsheet-section__title">{title}</h3>
      </div>
    )}
  </div>
  
  <div 
    class="cheatsheet-section__content"
    id={`${id}-content`}
    aria-labelledby={id}
  >
    <div class="cheatsheet-section__body">
      <slot />
    </div>
  </div>
</div>

{collapsible && (
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Initialize collapsible functionality for sections
      const sections = document.querySelectorAll('.cheatsheet-section--collapsible');
      
      sections.forEach(section => {
        const toggle = section.querySelector('.cheatsheet-section__toggle');
        const content = section.querySelector('.cheatsheet-section__content');
        const icon = section.querySelector('.cheatsheet-section__toggle-icon path');
        
        if (toggle && content) {
          // Set initial state
          const isCollapsed = section.classList.contains('collapsed');
          if (isCollapsed) {
            content.style.maxHeight = '0';
            if (icon) icon.setAttribute('d', 'm6 9 4 4 4-4'); // Right arrow
          } else {
            content.style.maxHeight = content.scrollHeight + 'px';
          }
          
          toggle.addEventListener('click', () => {
            const isCurrentlyCollapsed = section.classList.contains('collapsed');
            
            if (isCurrentlyCollapsed) {
              // Expand
              section.classList.remove('collapsed');
              content.style.maxHeight = content.scrollHeight + 'px';
              toggle.setAttribute('aria-expanded', 'true');
              if (icon) icon.setAttribute('d', 'm4 6 4 4 4-4'); // Down arrow
            } else {
              // Collapse
              section.classList.add('collapsed');
              content.style.maxHeight = '0';
              toggle.setAttribute('aria-expanded', 'false');
              if (icon) icon.setAttribute('d', 'm6 9 4 4 4-4'); // Right arrow
            }
          });
          
          // Handle window resize
          window.addEventListener('resize', () => {
            if (!section.classList.contains('collapsed')) {
              content.style.maxHeight = content.scrollHeight + 'px';
            }
          });
        }
      });
    });
  </script>
)}

<style>
  .cheatsheet-section {
    border-bottom: 1px solid var(--sl-color-gray-6);
    transition: all 0.3s ease;
  }

  .cheatsheet-section:last-child {
    border-bottom: none;
  }

  .cheatsheet-section__header {
    padding: 0;
  }

  .cheatsheet-section__header-content {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1.5rem 2rem 1rem 2rem;
  }

  .cheatsheet-section__toggle {
    width: 100%;
    background: none;
    border: none;
    padding: 1.5rem 2rem 1rem 2rem;
    text-align: left;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--sl-color-white);
    transition: all 0.2s ease;
  }

  .cheatsheet-section__toggle:hover {
    background: var(--sl-color-gray-6);
  }

  .cheatsheet-section__toggle:focus {
    outline: 2px solid var(--sl-color-accent);
    outline-offset: -2px;
  }

  .cheatsheet-section__toggle-icon {
    color: var(--sl-color-gray-2);
    flex-shrink: 0;
    transition: transform 0.2s ease;
  }

  .cheatsheet-section.collapsed .cheatsheet-section__toggle-icon {
    transform: rotate(-90deg);
  }

  .cheatsheet-section__icon {
    font-size: 1.25rem;
    line-height: 1;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.5rem;
    height: 1.5rem;
  }

  .cheatsheet-section__title {
    margin: 0;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--sl-color-white);
    line-height: 1.3;
    flex: 1;
  }

  .cheatsheet-section__content {
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .cheatsheet-section--collapsible .cheatsheet-section__content {
    max-height: none;
  }

  .cheatsheet-section.collapsed .cheatsheet-section__content {
    max-height: 0;
  }

  .cheatsheet-section__body {
    padding: 0 2rem 1.5rem 2rem;
  }

  /* Special styling for different content types within sections */
  .cheatsheet-section__body :global(pre) {
    margin: 0.75rem 0;
    border-radius: 6px;
    overflow: auto;
  }

  .cheatsheet-section__body :global(p) {
    margin: 0.75rem 0;
    color: var(--sl-color-gray-1);
    line-height: 1.6;
  }

  .cheatsheet-section__body :global(p:first-child) {
    margin-top: 0;
  }

  .cheatsheet-section__body :global(p:last-child) {
    margin-bottom: 0;
  }

  .cheatsheet-section__body :global(ul),
  .cheatsheet-section__body :global(ol) {
    margin: 0.75rem 0;
    padding-left: 1.5rem;
    color: var(--sl-color-gray-1);
  }

  .cheatsheet-section__body :global(li) {
    margin: 0.5rem 0;
    line-height: 1.5;
  }

  .cheatsheet-section__body :global(h4),
  .cheatsheet-section__body :global(h5),
  .cheatsheet-section__body :global(h6) {
    margin: 1rem 0 0.5rem 0;
    color: var(--sl-color-white);
    font-weight: 600;
  }

  .cheatsheet-section__body :global(h4) {
    font-size: 1rem;
    border-bottom: 1px solid var(--sl-color-gray-5);
    padding-bottom: 0.25rem;
  }

  .cheatsheet-section__body :global(h5) {
    font-size: 0.9rem;
  }

  .cheatsheet-section__body :global(h6) {
    font-size: 0.85rem;
  }

  .cheatsheet-section__body :global(table) {
    width: 100%;
    margin: 1rem 0;
    border-collapse: collapse;
    font-size: 0.9rem;
  }

  .cheatsheet-section__body :global(th),
  .cheatsheet-section__body :global(td) {
    padding: 0.5rem 0.75rem;
    text-align: left;
    border-bottom: 1px solid var(--sl-color-gray-5);
  }

  .cheatsheet-section__body :global(th) {
    background: var(--sl-color-gray-6);
    font-weight: 600;
    color: var(--sl-color-white);
  }

  .cheatsheet-section__body :global(td) {
    color: var(--sl-color-gray-1);
  }

  .cheatsheet-section__body :global(code) {
    background: var(--sl-color-gray-6);
    color: var(--sl-color-accent-high);
    padding: 0.125rem 0.375rem;
    border-radius: 3px;
    font-family: var(--sl-font-mono);
    font-size: 0.85em;
  }

  .cheatsheet-section__body :global(blockquote) {
    margin: 1rem 0;
    padding: 0.75rem 1rem;
    border-left: 4px solid var(--sl-color-accent);
    background: var(--sl-color-gray-6);
    color: var(--sl-color-gray-1);
    font-style: italic;
  }

  /* Print Styles */
  @media print {
    .cheatsheet-section {
      break-inside: avoid;
      border-bottom: 1px solid #ccc !important;
    }

    .cheatsheet-section__toggle {
      background: transparent !important;
    }

    .cheatsheet-section__title {
      color: #000 !important;
    }

    .cheatsheet-section__body :global(p),
    .cheatsheet-section__body :global(li),
    .cheatsheet-section__body :global(td) {
      color: #333 !important;
    }

    .cheatsheet-section__body :global(h4),
    .cheatsheet-section__body :global(h5),
    .cheatsheet-section__body :global(h6) {
      color: #000 !important;
    }

    .cheatsheet-section__body :global(th) {
      background: #f0f0f0 !important;
      color: #000 !important;
    }

    .cheatsheet-section__body :global(code) {
      background: #f5f5f5 !important;
      color: #d63384 !important;
    }

    .cheatsheet-section__body :global(blockquote) {
      background: #f8f9fa !important;
      color: #000 !important;
      border-left-color: #333 !important;
    }

    /* Ensure collapsed sections are visible when printed */
    .cheatsheet-section.collapsed .cheatsheet-section__content {
      max-height: none !important;
    }

    .cheatsheet-section__toggle-icon {
      display: none !important;
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .cheatsheet-section__header-content,
    .cheatsheet-section__toggle {
      padding: 1rem 1.5rem 0.75rem 1.5rem;
    }

    .cheatsheet-section__body {
      padding: 0 1.5rem 1rem 1.5rem;
    }

    .cheatsheet-section__title {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .cheatsheet-section__header-content,
    .cheatsheet-section__toggle {
      padding: 0.75rem 1rem 0.5rem 1rem;
    }

    .cheatsheet-section__body {
      padding: 0 1rem 0.75rem 1rem;
    }

    .cheatsheet-section__body :global(table) {
      font-size: 0.8rem;
    }

    .cheatsheet-section__body :global(th),
    .cheatsheet-section__body :global(td) {
      padding: 0.375rem 0.5rem;
    }
  }

  /* High Contrast Mode Support */
  @media (prefers-contrast: high) {
    .cheatsheet-section {
      border-bottom-width: 2px;
    }

    .cheatsheet-section__toggle:focus {
      outline-width: 3px;
    }
  }

  /* Reduced Motion Support */
  @media (prefers-reduced-motion: reduce) {
    .cheatsheet-section,
    .cheatsheet-section__content,
    .cheatsheet-section__toggle,
    .cheatsheet-section__toggle-icon {
      transition: none;
    }
  }
</style>